{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}

{% block content %}

  <main class="app-container govuk-body">
    <table class="govuk-table">
      <caption class="govuk-table__caption govuk-table__caption--m">{{ title }}</caption>
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">          
          <th scope="col" class="govuk-table__header">Heading</th>
          <th scope="col" class="govuk-table__header">Subheading</th>
          <th scope="col" class="govuk-table__header">Code</th>          
          <th scope="col" class="govuk-table__header">Actions</th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for row in rows %}
        <tr class="govuk-table__row">          
          <th scope="row" class="govuk-table__header">{{ row.heading }}</th>
          <td class="govuk-table__cell">{{ row.subheading }}</td>
          <td class="govuk-table__cell">{{ row.groupCode }}</td>          
          <td class="govuk-table__cell"><a href="/questions/group/{{ row.groupUuid }}" class="govuk-link">View</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </main>

{% endblock %}
