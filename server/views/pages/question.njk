{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Home" %}

{% block content %}

  <main class="app-container govuk-body">
    <table class="govuk-table">
      <caption class="govuk-table__caption govuk-table__caption--m">{{ title }}</caption>
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">          
          <th scope="col" class="govuk-table__header">Option</th>
          <th scope="col" class="govuk-table__header">Value</th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for row in rows %}
        <tr class="govuk-table__row">          
          <th scope="row" class="govuk-table__header">{{ row.field }}</th>
          <td class="govuk-table__cell">{{ row.value }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </main>

{% endblock %}
